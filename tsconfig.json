{
    "compilerOptions": {
        "baseUrl": ".",
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "lib": ["DOM", "ES5", "ES6", "ES7"],
        "paths": {
          "$lib": ["./lib"],
          "$lib/*": ["./lib/*"]
        }
    },
    "include": ["**/*.ts", "**/*.svelte"]
}
