{
	"name": "cerebro",
	"version": "0.1.0",
	"description": "Obsidian-first, AI-powered second brain that thinks with you.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"lint": "eslint lib/ --max-warnings=0",
		"lint:fix": "eslint lib/ --fix",
		"fix-all": "npm run format:fix && npm run lint:fix",
		"test": "jest --config jest.config.js",
		"test:watch": "jest --config jest.config.js --watch",
		"test:coverage": "jest --config jest.config.js --coverage"
	},
	"keywords": [],
	"author": "Nick Chong",
	"peerDependencies": {
		"obsidian": "^1.1.0"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.33.1",
		"@codemirror/state": "^6.5.2",
		"@codemirror/view": "^6.36.4",
		"obsidian": "^1.1.0",
		"openai": "^4.28.0",
		"pino": "^9.6.0",
		"sse": "github:mpetazzoni/sse.js"
	},
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^16.18.122",
		"@typescript-eslint/eslint-plugin": "^7.7.1",
		"@typescript-eslint/parser": "^7.7.1",
		"builtin-modules": "^3.3.0",
		"esbuild": "^0.25.1",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.9.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-jest": "^28.11.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"prettier": "^3.2.5",
		"ts-jest": "^29.1.2",
		"tslib": "^2.8.1",
		"typescript": "^4.9.5"
	}
}
